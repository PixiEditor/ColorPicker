<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0</TargetFrameworks>
        <RootNamespace>ColorPicker.Models</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>PixiEditor.ColorPicker.Models</PackageId>
        <Title>Common logic of PixiEditor.ColorPicker</Title>
        <Authors>Egor Mozgovoy, Krzysztof Krysi≈Ñski</Authors>
        <Description>Common logic of PixiEditor.ColorPicker, both for WPF and AvaloniaUI versions.</Description>
        <Copyright>PixiEditor</Copyright>
        <PackageProjectUrl>https://github.com/PixiEditor/ColorPicker</PackageProjectUrl>
        <RepositoryUrl>https://github.com/PixiEditor/ColorPicker</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>color color-picker graphics wpf avaloniaui</PackageTags>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>sgkey.snk</AssemblyOriginatorKeyFile>
        <Version>1.0.7</Version>
    </PropertyGroup>

    <ItemGroup>
      <None Include="README.md">
        <Link>README.md</Link>
        <Pack>true</Pack>
        <PackagePath>\</PackagePath>
      </None>
        <None Include="..\..\LICENSE.md">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
            <Link>LICENSE.md</Link>
        </None>
    </ItemGroup>

</Project>
